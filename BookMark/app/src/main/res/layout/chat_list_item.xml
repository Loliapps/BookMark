<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.mikhaellopez.circularimageview.CircularImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:civ_border="true"
    app:civ_border_color="@color/white"
    app:civ_border_width="1dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20dp"
    android:layout_centerVertical="true"
    android:src="@drawable/u1"
    android:id="@+id/chatListView_userImage"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:textColor="@color/black"
    android:layout_marginRight="90dp"
    android:layout_marginLeft="120dp"
    android:layout_marginTop="12dp"
    android:text="lilach"
    android:gravity="right"
    android:textSize="16sp"
    android:id="@+id/chatListView_userName" />


<TextView
    android:layout_width="match_parent"
    android:layout_height="18dp"
    android:textColor="@color/black"
    android:layout_marginRight="90dp"
    android:layout_marginLeft="120dp"
    android:layout_marginBottom="12dp"
    android:text="lilach"
    android:gravity="right"
    android:textSize="14sp"
    android:layout_below="@id/chatListView_userName"
    android:id="@+id/chatListView_lastMsg" />


<TextView
    android:layout_width="100dp"
    android:layout_height="18dp"
    android:textSize="14sp"
    android:gravity="center"
    android:textColor="@color/light_gray"
    android:layout_marginTop="12dp"
    android:layout_alignParentLeft="true"
    android:id="@+id/chatListView_time"/>


</RelativeLayout>